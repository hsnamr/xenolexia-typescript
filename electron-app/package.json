{
  "name": "xenolexia-electron",
  "version": "0.1.0",
  "description": "Learn languages through the stories you love",
  "author": "Xenolexia Team",
  "private": true,
  "workspaces": [
    "app",
    "lib"
  ],
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "npm run test:unit:lib && npm run test:unit:app",
    "test:unit:lib": "cd lib && npm test",
    "test:unit:app": "cd app && npm test",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"app/**/*.{ts,tsx,js,jsx,json}\" \"lib/**/*.{ts,tsx,js,jsx,json}\" \"*.{ts,tsx,js,jsx,json,md}\" \"e2e/**/*.ts\"",
    "format:check": "prettier --check \"app/**/*.{ts,tsx,js,jsx,json}\" \"lib/**/*.{ts,tsx,js,jsx,json}\" \"*.{ts,tsx,js,jsx,json,md}\" \"e2e/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint:check && npm run format:check",
    "prepare": "husky install",
    "electron": "cd app && npm run electron",
    "electron:dev": "cd app && npm run electron:dev",
    "electron:build": "cd app && npm run electron:build",
    "electron:build:linux": "cd app && npm run electron:build:linux",
    "electron:build:mac": "cd app && npm run electron:build:mac",
    "electron:build:win": "cd app && npm run electron:build:win",
    "build": "npm run electron:build",
    "build:assets": "cd app && npm run build:assets",
    "build:windows": "npm run electron:build:win",
    "build:macos": "npm run electron:build:mac",
    "build:linux": "npm run electron:build:linux",
    "build:linux:deb": "cd app && npm run build:linux:deb",
    "build:linux:rpm": "cd app && npm run build:linux:rpm",
    "build:linux:arch": "cd app && npm run build:linux:arch",
    "build:linux:tarball": "cd app && npm run build:linux:tarball"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.51.1",
    "date-fns": "^3.6.0",
    "epubjs": "^0.3.93",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "uuid": "^10.0.0",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.28.5",
    "@babel/runtime": "^7.24.7",
    "@playwright/test": "^1.49.0",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.6",
    "@types/react": "^18.2.79",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "assert": "^2.1.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^10.0.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "events": "^3.3.0",
    "html-webpack-plugin": "^5.6.6",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "prettier": "3.3.2",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.4.5",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "build": {
    "appId": "com.xenolexia.app",
    "productName": "Xenolexia",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "publish": null,
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "pacman",
        "tar.gz"
      ],
      "category": "Education",
      "icon": "assets/icon.png",
      "synopsis": "Learn languages through the stories you love",
      "description": "Xenolexia is a cross-platform e-book reader that helps you learn languages by reading books with integrated translation and vocabulary building features.",
      "maintainer": "Xenolexia Team",
      "vendor": "Xenolexia"
    },
    "mac": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.education",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
